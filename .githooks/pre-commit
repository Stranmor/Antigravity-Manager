#!/usr/bin/env bash
# Pre-commit hook for Antigravity Manager
# Ensures code quality before every commit

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}━━━ Pre-commit checks ━━━${NC}"

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo -e "${RED}ERROR: cargo not found in PATH${NC}"
    exit 1
fi

# 1. Format check
echo -e "\n${YELLOW}[1/2] Checking formatting (cargo fmt)...${NC}"
if ! cargo fmt --all -- --check; then
    echo -e "${RED}ERROR: Code is not formatted. Run 'cargo fmt --all' to fix.${NC}"
    exit 1
fi
echo -e "${GREEN}✓ Formatting OK${NC}"

# 2. Clippy lints
echo -e "\n${YELLOW}[2/2] Running clippy...${NC}"
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo -e "${RED}ERROR: Clippy found issues. Fix them before committing.${NC}"
    exit 1
fi
echo -e "${GREEN}✓ Clippy OK${NC}"

echo -e "\n${GREEN}━━━ All checks passed! ━━━${NC}"

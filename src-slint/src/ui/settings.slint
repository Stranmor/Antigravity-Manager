// Settings Page - Full Featured Configuration

import { VerticalBox, HorizontalBox, ScrollView, LineEdit, ComboBox, Switch, Slider, Button } from "std-widgets.slint";
import { Theme } from "components/theme.slint";

// Settings data structure
export struct SettingsData {
    language: string,
    theme: string,
    auto_refresh: bool,
    refresh_interval: int,
    auto_sync: bool,
    sync_interval: int,
    auto_launch: bool,
    default_export_path: string,
    antigravity_executable: string,
    // Proxy settings
    proxy_enabled: bool,
    proxy_port: int,
    proxy_auto_start: bool,
    proxy_allow_lan: bool,
    proxy_enable_logging: bool,
    proxy_request_timeout: int,
    proxy_api_key: string,
}

// Section header component
component SectionHeader inherits Rectangle {
    in property <string> title;
    in property <string> icon;
    
    height: 48px;
    
    HorizontalLayout {
        spacing: 12px;
        padding-left: 4px;
        
        Text {
            text: icon;
            font-size: 20px;
            vertical-alignment: center;
        }
        
        Text {
            text: title;
            color: Theme.text-primary;
            font-size: 16px;
            font-weight: 600;
            vertical-alignment: center;
        }
    }
}

// Setting row component
component SettingRow inherits Rectangle {
    in property <string> label;
    in property <string> description;
    
    height: description == "" ? 48px : 64px;
    
    HorizontalLayout {
        padding-left: 16px;
        padding-right: 16px;
        spacing: 16px;
        
        VerticalLayout {
            horizontal-stretch: 1;
            alignment: center;
            spacing: 4px;
            
            Text {
                text: label;
                color: Theme.text-primary;
                font-size: 14px;
                font-weight: 500;
            }
            
            if description != "": Text {
                text: description;
                color: Theme.text-muted;
                font-size: 12px;
            }
        }
        
        @children
    }
}

